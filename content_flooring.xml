<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <ImageView
            android:id="@+id/f1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignLeft="@+id/f2"
            android:layout_below="@+id/f2"
            android:layout_marginTop="14dp"
            android:src="@drawable/f1" />

        <ImageView
            android:id="@+id/f4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:src="@drawable/f2" />




        <ImageView
            android:id="@+id/f2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:src="@drawable/f2" />

        <ImageView
            android:id="@+id/f3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignLeft="@+id/f1"
            android:layout_below="@+id/f1"
            android:layout_marginTop="14dp"
            android:src="@drawable/f3" />

        <ImageView
            android:id="@+id/f6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignLeft="@+id/f3"
            android:layout_below="@+id/f3"
            android:layout_marginTop="14dp"
            android:src="@drawable/f6" />


        <ImageView
            android:id="@+id/f9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignLeft="@+id/f6"
            android:layout_below="@+id/f6"
            android:layout_marginTop="14dp"
            android:src="@drawable/f9" />

        <ImageView
            android:id="@+id/f10"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignLeft="@+id/f9"
            android:layout_below="@+id/f9"
            android:layout_marginTop="14dp"
            android:src="@drawable/f10" />



    </RelativeLayout>
</ScrollView>
